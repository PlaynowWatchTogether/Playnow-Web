{{#if displaySender}}
  <div class="profilePicWrapper">
    <img src="{{user.safeProfilePic}}" class="profilePic">
  </div>
{{else}}
  <div class="profilePicWrapper"/>
{{/if}}
{{#if isPhoto}}
  <div class="message-img">
    <img src="{{model.thumbnail}}"/>
  </div>
{{else}}
  {{#if isVideoRequest}}
    <div class="message-video-request">
      <div class="title">
        {{requestTitle}}
      </div>
      <div class="thumbnailHolder">
        <img src="{{requestThumbnail}}" alt="requestThumbnail"/>
      </div>
      <div class="channel">
        {{requestChannel}}
      </div>
    </div>
  {{else}}
    <div class="message-text">
      {{#if model.text}}
        <span class="text">
          {{model.text}}
        </span>
      {{/if}}

    </div>

  {{/if}}
{{/if}}
