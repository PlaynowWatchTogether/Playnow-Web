{{#if displaySender}}
  <div class="profilePicWrapper">
    <img src={{user.safeProfilePic}} class="profilePic" alt="icon">
  </div>
{{else}}
  <div class="profilePicWrapper"></div>
{{/if}}
{{#if isPhoto}}
  <div class="message-img">
    <img src={{model.thumbnail}} {{action "clickOnPhoto"}} role="button" alt="icon">
  </div>
{{else}}
  {{#if isVideoRequest}}
    <div class="message-video-request {{videoRequestClass}}">
      <div class="title">
        {{requestTitle}}
      </div>
      <div class="thumbnailHolder">
        <img src={{requestThumbnail}} alt="requestThumbnail">
      </div>
      <div class="channel">
        {{requestChannel}}
      </div>
    </div>
  {{else}}
    <div class="message-text">
      <div class="text">
        {{{bodyMessage}}}
      </div>
    </div>
    {{#if isLastSeen}}
      <div class="last-seen">
        <div class="profilePicWrapper">
          <img src={{receiver.safeProfilePic}} class="profilePic" alt="icon" role="button">
        </div>
      </div>
    {{/if}}

  {{/if}}
{{/if}}
