{{#if displaySender}}
  <div class="profilePicWrapper">
    <img src={{user.safeProfilePic}} class="profilePic" alt="icon">
  </div>
{{else}}
  <div class="profilePicWrapper"></div>
{{/if}}
{{#if isPhoto}}
  <div class="message-img">
    <a rel={{model.thumbnail}} href={{model.thumbnail}} data-lightbox={{model.thumbnail}} >
      <img rel={{model.thumbnail}} src={{model.thumbnail}} class="img-fluid">
    </a>
  </div>
{{else}}
  {{#if isVideoRequest}}
    <div class="message-video-request {{videoRequestClass}}">
      <div class="title">
        {{requestTitle}}
      </div>
      <div class="thumbnailHolder">
        <img src={{requestThumbnail}} alt="requestThumbnail">
      </div>
      <div class="channel">
        {{requestChannel}}
      </div>
    </div>
  {{else}}
    {{#if isVideo}}
      <div class="message-video" role="button">
        {{#if hasVideoThumbnail}}
          <img src={{videoThumbnail}} alt="video" class="video-thumbnail">
        {{else}}
          <div class="video-thumbnail"></div>
        {{/if}}
        <div class="control-holder">
          <div class="control-wrapper">

            <img src="/assets/ic_icon_play_video.png" alt="play" class="video-play">
          </div>
        </div>
      </div>
    {{else}}

      <div class="message-text">
        <div class="text">
          {{{bodyMessage}}}
        </div>
      </div>
      {{#if isLastSeen}}
        <div class="last-seen">
          <div class="profilePicWrapper">
            <img src={{receiver.safeProfilePic}} class="profilePic" alt="icon" role="button">
          </div>
        </div>
      {{/if}}
    {{/if}}

  {{/if}}
{{/if}}
