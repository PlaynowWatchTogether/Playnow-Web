<!-- Modal -->
<div class="modal fade" id="groupSharedPopup" tabindex="-1" role="dialog" aria-labelledby="groupSharedPopupTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="groupSharedPopupTitle">Profile</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="group-profile-root">
        	<div class="group-profile-header">
        		<div class="group-profile-image">
	        		<div class="profilePicWrapper">

                {{#file-upload name="group-profile"
                   accept="image/*"
                   onfileadd=(action "uploadGroupProfileImage")
                   classNames="profilePicChange"}}
                   <img src={{profilePic}} class="profilePic" alt="icon">
                {{/file-upload}}
					    </div>
        		</div>
        		<div class="group-profile-title">
              <div class="edit-title-wrapper" {{action "toggleDisabled"}}>
                  <img src="/assets/ic_icon_pencil@2x.png" class="edit-title" alt="edit group title"/>
              </div>
        			<div class="group-title noselect">
                        {{#if isDisabled}}
                            <div class="group-title-label">{{title}}</div>
                        {{else}}
                            {{input value=editableTitle classNames="group-name-input" disabled=isDisabled insert-newline=(action "updateGroupName") autocomplete='off'}}
                        {{/if}}

        			</div>
        		</div>
        		<div class="group-profile-participants">

        			<div class="group-participants-header noselect">Participants:</div>
        			<div class="group-participants-search">
            				<div class="group-participants-search-holder">
    				          <div class="compose-row">
    				            {{#users-chat-compose classNames="compose-search"
    				            					  chips=composeChips
    				            					  placeholder="Search in contact"
    				            					  onChipAdd=(action "onChipAdd")
    				            					  typeaheadID="group-typeahead"
    				                                  onChipClick=(action "onChipClick")}}
    				              <div class="error-tip">{{composeError}}</div>
    				            {{/users-chat-compose}}
    				          </div>
    				        </div>
            				<div class="participants-add" {{action "addParticipants"}}>
            					<img alt="add participants" src="/assets/ic_plus@2x.png"/>
            					<div class="noselect">Add</div>
            				</div>                        
        			</div>
        			<div class="group-participants-members">
        				{{#each members as |member|}}
        					{{group-profile-participant model=member classNames="group-participants-member"}}
        				{{/each}}
        			</div>
        		</div>
        	</div>
            <div class="group-profile-shared-label">
                Shared between you and {{title}}
            </div>
        	<div class="group-profile-shared">
                {{#each attachments as |attachment|}}
                    {{group-profile-attachment model=attachment classNames="group-profile-attachment"}}
                {{else}}
                    <div class="group-profile-shared-none">
                        Nothing shared so far
                    </div>
                {{/each}}
        	</div>
        </div>
      </div>
    </div>
  </div>
</div>
