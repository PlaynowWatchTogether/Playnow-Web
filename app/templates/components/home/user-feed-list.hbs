{{#if isLoading}}
  {{loading-view}}
{{/if}}
{{#each model as |item| }}
  {{home/user-feed-item model=item id=item.id classNames="user-feed-item-wrapper" openDetails=(action "openDetails") lastUpdate=lastUpdate}}
{{else}}
  {{#unless isLoading}}
    <div class="empty">
      Nothing to show. Follow groups to see posts!
    </div>
  {{/unless}}
{{/each}}
