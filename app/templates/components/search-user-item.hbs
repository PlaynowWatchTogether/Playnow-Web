<div class="profilePicWrapper">
<img class="profilePic" src="{{model.safeProfilePic}}"/>
</div>
<div class="firstName">{{model.FirstName}} {{model.LastName}}</div>
<div class="addHolder">
  {{#if isAdded}}
    <div class="added">
      <img src="/assets/ic_friend_added.png"/>
      <div class="label">
        Added
      </div>
    </div>
  {{else}}
    <div class="add" {{action 'addFriend'}}>
      <img src="/assets/ic_add_friend.png"/>
      <div class="label">
        Add
      </div>
    </div>
  {{/if}}

</div>