{{yield}}
{{thumbnail-background model=videoThumbnail classNames="thumbnail"}}
<div class="title-holder">
  <p class="videoTitle block-with-text">
    {{videoTitle}}
  </p>

</div>
<div class="channel-title">
  {{channelTitle}}
</div>
<div class="channel-desc">
  {{viewsCount}} {{channelDesc}}
</div>
{{#if displayRequest}}
<div class="request-overlay">
	<div class="request-btn" role="button" {{action "requestVideo"}}>
		Request
	</div>
</div>
{{/if}}
