<div class="row chatRoot {{modeClass}} {{videoClass}} h-100" data-conv-id={{convId}}>
  <div class="col-8 content h-100">
    {{#file-dropzone classNames="row holder h-100" name="chatPhotos" as |dropzone|}}
      {{#if dropzone.active}}
        {{#if dropzone.valid}}
          <div class="dropzone">
            <div class="content">
              <div>Drop to upload</div>
            </div>
          </div>
        {{else}}

        {{/if}}
      {{/if}}

      <div class="titleHolder">
        {{#if isRoom}}
          <div class="back">
            {{#link-to "home"}}
              <img class="back-icon" src="/assets/ic_arrow_back_flipped@2x.png" alt="icon">
            {{/link-to}}
          </div>
          <div class="title noselect">
            {{#if chatModel.hasProfilePic}}
              <div class="profilePicWrapper">
                <img src={{chatModel.user.safeProfilePic}} class="profilePic" alt="ProfilePic">
              </div>
            {{else}}
              <div class="profilePicWrapper"></div>
            {{/if}}

            <span class="name">{{chatModel.title}}</span>
          </div>
        {{else}}
          <div class="title noselect">
            {{#if chatModel.hasProfilePic}}
              {{#user-profile-view classNames="profilePicWrapper" model=chatModel.user.id}}
                <img src={{chatModel.user.safeProfilePic}} class="profilePic" alt="ProfilePic">
              {{/user-profile-view}}
            {{else}}
              <div class="profilePicWrapper"></div>
            {{/if}}

            <span class="name">{{chatModel.title}}</span>
          </div>
          <div class="back">
            {{#link-to "home"}}
              <img class="back-icon" src="/assets/ic_arrow_back@2x.png" alt="icon">
            {{/link-to}}
          </div>
        {{/if}}

      </div>
      {{#if isCompose}}
        <div class="searchHolder">
          <div class="row compose-row">
            {{#users-chat-compose classNames="col compose-search" chips=composeChips onChipAdd=(action "onChipAdd")
                                  onChipClick=(action "onChipClick")}}
              <div class="error-tip">{{composeError}}</div>
            {{/users-chat-compose}}
          </div>
        </div>
      {{else}}
        <div class="chat-members {{membersClass}}">
          {{#each membersProfiles as |member|}}
            <div class="member {{member.className}}">
              {{#user-profile-view classNames="profilePicWrapper" model=member.id}}
                <img class="profilePic" src={{member.profilePic}} alt="icon">
              {{/user-profile-view}}
            </div>
          {{/each}}
        </div>
      {{/if}}
      <div id="youtubeHolder" class={{playerLoadingClass}}>
        {{#if hasPlayer}}
          {{#youtube-video-player id="ytplayer" model=playerModel video=playerVideo playerAction=playerAction
                                  videoLoadedAction=(action "videoLoaded")
                                  playerState=(action "playerStateAction")
                                  isLoading=playerLoading
                                  playerSeconds=playerSeconds
                                  onVideoEnd=(action "onVideoEnd")
                                  slidingProgress=slidingProgress}}

          {{/youtube-video-player}}
          <div class="overlay"></div>
          <div class="controlsOverlay">
            <div class="controlsHolder">
              <img src="/assets/ic_video_close.png" class="close" alt="icon">
              <div class="pause-control"></div>
              <div class="control">
                <div class="play">
                  <img src="/assets/ic_icon_play_video.png" alt="icon">
                </div>
                <div class="pause">
                  <img src="/assets/ic_icon_pause_video.png" alt="icon">
                </div>
              </div>

              <span class="video-title noselect"></span>
              {{#if canAutoplay}}
                <div class="switch-holder">
                  <div class="label">Auto play</div>
                  <label class="switch">
                    <input type="checkbox" id="autoplay-checkbox">
                    <span class="switcher round"></span>

                  </label>
                </div>
              {{/if}}
              <input type="range" min="1" max="100" value="50" class="slider">
            </div>
          </div>
          <div class="loading-overlay {{loadingOverlayClass}}"></div>
          <div class="watchers-holder {{watchersClass}}">

            <div class="watchers-streamer">
              {{#each watchers as |watcher index|}}
                {{#watcher-item model=watcher index=index streamer=true}}

                {{/watcher-item}}
              {{/each}}
            </div>
            <div class="watchers-other">
              {{#each watchers as |watcher index|}}
                {{#watcher-item model=watcher index=index streamer=false}}

                {{/watcher-item}}
              {{/each}}
            </div>
          </div>
        {{/if}}
      </div>
      {{#unless hasPlayer}}
        <div id="youtubePlaceHolder"></div>
      {{/unless}}
      {{#if hasPlayer}}
        <div class="youtube-music-holder">
          <div class="music-player">
            <div class="watchers {{watchersClass}}">
              <div class="watchers-streamer">
                {{#each watchers as |watcher index|}}
                  {{#watcher-item model=watcher index=index streamer=true}}

                  {{/watcher-item}}
                {{/each}}
              </div>
              <div class="watchers-other">
                {{#each watchers as |watcher index|}}
                  {{#watcher-item model=watcher index=index streamer=false}}

                  {{/watcher-item}}
                {{/each}}
              </div>
            </div>
            <div class="details noselect">
              <img class="thumbnail" src="" alt="icon">
              <div class="info">
                <div class="song-name"></div>
                <div class="song-artist"></div>
              </div>
            </div>
            <div class="controls">
              <img src="/assets/ic_music_play.png" class="play-btn" alt="icon">
              <img src="/assets/ic_music_pause.png" class="pause-btn" alt="icon">
              <img src="/assets/ic_music_close.png" class="close-btn" alt="icon">
            </div>
            <input type="range" min="1" max="100" value="50" class="slider">
          </div>
        </div>
      {{/if}}
      {{#end-scrollable classNames="messagesHolder" blockScroll=blockAutoscroll onScrolledHalf=(action "loadMore")
                        scrollChild=".messagesWrappper"}}
        <div class="messagesWrappper" data-total={{totalMessages}} data-limit={{limit}}>
          {{#if isLoadingMessages}}
            <div class="loading-holder h-100">
              <div class="lds-ripple">
                <div></div>
                <div></div>
              </div>
            </div>
          {{/if}}
          {{#if hasMoreMessages}}
            <div class="load-more" role="button" {{action "loadMore"}}>Show more</div>
          {{/if}}
          {{#each filteredMessages as |message|}}
            {{#if message.isMessage}}
              {{#chat-message-item model=message.message classNames="messageHolder"
                                   canClick=isMaster
                                   onClick=(action "onMessageClick")
                                   displaySender=message.displaySender lastSeen=lastSeenMessage myID=myID
                                   members=members onPhotoSelect=(action "onPhotoSelect")}}

              {{/chat-message-item}}
            {{/if}}
            {{#if message.isDate}}
              {{#chat-message-time model=message.date}}

              {{/chat-message-time}}

            {{/if}}
          {{/each}}
          {{#unless isLoadingMessages}}
            <div class="typing-indicators">
              {{#each typingIndicatorProfiles as |indicator|}}
                <div class="indicator">
                  <div class="profilePicWrapper">
                    <img class="profilePic" src={{indicator.profilePic}} alt="icon">
                  </div>
                  <img src="/assets/ic_typing_indicator.png" class="typing-icon" alt="icon">
                </div>
              {{/each}}
            </div>
          {{/unless}}
        </div>
      {{/end-scrollable}}
      <div class="newMessageHolder">
        {{custom-content-editable value=messageText model=model placeholder="Type a message" classNames="messageContent"
                                  enter=(action "onMessageEnterPress") paste=(action "onTextPaste") allowNewlines=true}}
        <div class="imgHolder">
          <img src="/assets/ic_chat_send.png" {{action "sendMessage"}} alt="icon" role="button">
        </div>
        {{#file-upload name="chatPhotos"
                       accept="image/*, video/mp4"
                       onfileadd=(action "uploadImageToChat")}}
          <img src="/assets/ic_chat_msg_image@2x.png" alt="icon">
        {{/file-upload}}

      </div>
    {{/file-dropzone}}
  </div>
  <div class="col-4 media">
    <div class="row holder h-100">
      <div class="title">
        <div>
          <span class="noselect">Trending</span>
        </div>
      </div>
      <div class="tabs">
        <ul class="nav nav-pills">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#videos" role="tab" aria-controls="videos"
               aria-selected="true" {{action "pickVideosSearch"}}>
              Videos
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#music" role="tab" aria-controls="music"
               aria-selected="true" {{action "pickSongsSearch"}}>
              Songs
            </a>
          </li>
        </ul>
      </div>
      <div class="tab-content col-12">
        <div class="tab-pane row fade show active" id="videos">
          <div class="col-12">

            {{#scroll-with-listener  music=false
                                     onScrolledHalf=(action "scrolledHalfYoutubeVideo") scrollParent=".tab-content"
                                     loading=loadingVideo}}

              <div class="searchHolder">
                <div class="search">
                  <img src="/assets/search_icon@2x.png" class="icon" alt="icon">
                  {{input value=searchQueryVideo classNames="searchInput" placeholder="Search content"
                          insert-newline=(action "triggerSearch") autocomplete='off' name="videoSearch"}}
                  <div class="trigger-search {{loadingVideoClass}}" {{action "triggerSearch"}} role="button">
                    <img src="/assets/ic_search_trigger@2x.png" class="icon" alt="icon">
                  </div>
                </div>
              </div>
              <div class="youtube-items noselect">
                {{#if isLoadingVideo}}
                  <div class="loading-holder h-100">
                    <div class="lds-ripple">
                      <div></div>
                      <div></div>
                    </div>
                  </div>
                {{/if}}
                {{#each youtubeVideoItems as |video|}}
                  {{#youtube-video model=video classNames="youtube-item"
                                   clickAction=(action "videoPick")}}

                  {{/youtube-video}}
                {{/each}}
              </div>

            {{/scroll-with-listener}}
          </div>
        </div>
        <div class="tab-pane fade" id="music">
          {{#scroll-with-listener classNames="youtube-items row music noselect" music=false
                                  onScrolledHalf=(action "scrolledHalfYoutubeMusic") scrollParent=".tab-content"
                                  loading=loadingMusic}}
            <div class="searchHolder">
              <div class="search">
                <img src="/assets/search_icon@2x.png" class="icon" alt="icon">
                {{input value=searchQueryMusic classNames="searchInput" placeholder="Search content"
                        insert-newline=(action "triggerSearch") autocomplete='off' name="musicSearch"}}
                <div class="trigger-search {{loadingMusicClass}}" {{action "triggerSearch"}} role="button">
                  <img src="/assets/ic_search_trigger@2x.png" class="icon" alt="icon">
                </div>
              </div>
            </div>
            {{#if isLoadingMusic}}
              <div class="loading-holder h-100">
                <div class="lds-ripple">
                  <div></div>
                  <div></div>
                </div>
              </div>
            {{/if}}
            {{#each youtubeMusicItems as |video|}}
              {{#youtube-music model=video classNames="youtube-item-music col-12"
                               clickAction=(action "musicPick")}}

              {{/youtube-music}}

            {{/each}}
          {{/scroll-with-listener}}
        </div>
      </div>


    </div>
  </div>
</div>

<div class="modal fade" id="videoPreviewModal" tabindex="-1" role="dialog" aria-labelledby="photoPreviewModal"
     aria-hidden="false">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <video controls width="250">

      <source src={{videoPlayerUrl}}
              type="video/mp4">

      Sorry, your browser doesn't support embedded videos.
    </video>
  </div>
</div>
