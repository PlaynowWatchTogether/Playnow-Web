<div class="background_gradient welcomePage">

  {{#welcome-header classNames="container-fluid" tagName="header"}}
    <div class="row welcomeHeader">
      <div class="col-7 welcomeIconHolder">
        <a href="/" class="welcome-icon-a">
          <span class="header_title">Playnows</span>
          <img src="/assets/main.png" class="welcome_icon" alt="Icon">
        </a>
      </div>
      <div class="col-5 welcome-login-holder">
        <div class="row headerLoginControls">
          {{#if showForgot}}
            <div class="forgot-holder">


              <div class="welcomeHeaderUsername forgotPassword">
                <span class="forgot-email-label">email</span>
                {{input value=forgotEmail classNames="username" insert-newline=(action "forgotAction")}}
                <span class="error-tip">{{forgotError}}</span>
                <span class="message-tip">{{forgotMessage}}</span>
              </div>
            </div>
            <div class="loginHolder">
              <div {{action "forgotAction"}} class="loginBtn hoveredBtn {{forgotBtnClass}}">Reset</div>
            </div>
            <div class="loginHolder">
              <div {{action "forgotCancel"}} class="cancelBtn">Back</div>
            </div>
          {{else}}

            <div>
              <div class="welcomeHeaderUsername">
                <span class="usernameLabel">Username or email</span>
                {{input value=form.username classNames="username" insert-newline=(action "loginAction")}}
                <span class="error-tip">{{error}}</span>
              </div>

            </div>
            <div>
              <div class="welcomeHeaderPassword">
                <span class="passwordLabel">Password</span>
                {{input value=form.password classNames="password" type="password"
                        insert-newline=(action "loginAction")}}
                <span class="forgotPassword" {{action "openForgot"}}>Forgot Password?</span>
              </div>
            </div>
            <div class="loginHolder">
              <div {{action "loginAction"}} class="loginBtn hoveredBtn {{loginBtnClass}}">Log In</div>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  {{/welcome-header}}

  {{#welcome-body classNames="container-fluid welcomeBody" tagName="section" minHeight=0 useFooter=0.4}}
    <div class="row welcomeContent h-100">
      <div class="col-7 welcomeLeft">
        <div class="content">

          <img src="/assets/welcome_img.png" class="welcome-img" alt="icon">
          <div class="welcome-text-holder">
            <div class="welcome-text">
              <h1>Watch together!</h1>
              <div>Anywhere!</div>
            </div>

            <div class="get-the-app">Get the app.</div>
            <div class="btn-holder">
              <a href="https://itunes.apple.com/us/app/playnow-watch-together/id1232697124?mt=8">
                <img alt="Download on the App Store" src="/assets/app_store_badge.svg">
              </a>
              <a
                href="https://play.google.com/store/apps/details?id=com.playnow.playnow&pcampaignid=MKT-Other-global-all-co-prtnr-py-PartBadge-Mar2515-1">
                <img class="gplay" alt="Get it on Google Play"
                     src="/assets/google_play_badge.png">
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-5 welcomeRight">
        <div class="content row">
          <div class="col-12">
            <p class="title">Create a New Account</p>
            <p class="subTitle">Text and watch together!</p>
            <div class="firstLastName">

              <div class="registerFirstName">
                {{input value=form.register.firstName classNames="registerEdit" placeholder="First name"}}
                <span class="error-tip">{{form.register.error.firstName}}</span>
              </div>
              <div class="registerLastName">
                {{input value=form.register.lastName classNames="registerEdit" placeholder="Last name"}}
                <span class="error-tip">{{form.register.error.lastName}}</span>
              </div>
            </div>
            <p class="addFriend">Add friends with your username!</p>
            <div class="registerUsername">

              {{input value=form.register.username classNames="registerEdit"
                      placeholder="Pick a Username (e.g user123)"}}
              <span class="error-tip">{{form.register.error.username}}</span>
            </div>
            <div class="registerPassword">
              {{input value=form.register.password classNames="registerEdit" placeholder="Password" type="password"}}
              <span class="error-tip">{{form.register.error.password}}</span>
            </div>
            <p class="birthdayLabel">Birthday</p>
            <div class="registerBirthday">
              {{birthday-picker value=form.register.birthDate classNames="input-holder" onDateSet=(action "onDateSet")}}
              <span class="error-tip">{{form.register.error.birthDate}}</span>
              <p class="bdHint">You can’t use Playnows if you are younger than 13.</p>
            </div>
            <p class="termsText">By clicking Sign Up, you agree to the Terms and Policy.</p>
            <div class="signUpHolder">
              <button {{action "signUpAction"}} class="signUpBtn hoveredBtn {{signupBtnClass}}">Sign Up</button>
              <span class="error-tip">{{form.register.error.global}}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/welcome-body}}
  <footer>

    <div class="holder">
      <div class="item">
      </div>
      <div class="item">
        <p class="footerColumnHeader">Company</p>
        <a class="footerColumnItem" rel="noopener" target="_blank" href="https://dhj9817.wixsite.com/playnow/about">
          About Playnows
        </a>
        <a class="footerColumnItem" rel="noopener" target="_blank" href="https://dhj9817.wixsite.com/playnow/jobs">
          Jobs
        </a>
      </div>
      <div class="item">
        <p class="footerColumnHeader">Legal</p>
        <a class="footerColumnItem" rel="noopener" target="_blank" href="https://dhj9817.wixsite.com/playnow/terms">
          Terms of Use
        </a>
        <a class="footerColumnItem" rel="noopener" target="_blank" href="https://dhj9817.wixsite.com/playnow/policy">
          Privacy Policy
        </a>
        <a class="footerColumnItem" rel="noopener" target="_blank" href="https://dhj9817.wixsite.com/playnow/copyright">
          Copyright
        </a>
      </div>
      <div class="item">
        <p class="footerColumnHeader">Community</p>
        <a class="footerColumnItem" rel="noopener" target="_blank"
           href="https://www.playnows.com/community">
          Guidelines
        </a>
        <a class="footerColumnItem" rel="noopener" target="_blank" href="https://dhj9817.wixsite.com/playnow/support">
          Support
        </a>
      </div>
      <div class="item">
        <p class="footerColumnHeader">Business</p>
        <a class="footerColumnItem" rel="noopener" target="_blank" href="https://dhj9817.wixsite.com/playnow/branding">
          Branding
        </a>
        <a class="footerColumnItem" rel="noopener" target="_blank" href="https://dhj9817.wixsite.com/playnow/contact">
          Contact
        </a>
      </div>
      <div class="item crHolder">
        <p class="copyRight">©2019 Playnows, Inc. All rights reserved.</p>
      </div>
    </div>
  </footer>
</div>
